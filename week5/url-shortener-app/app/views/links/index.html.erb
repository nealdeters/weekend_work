<h1>Your links <small><%= link_to "Add New Link", "/links/new" %></small></h1>


<table class="table table-striped table-hover">
  <tr>
    <th>Slug</th>
    <th>Target URL</th>
    <th>Created At</th>
    <th>Actions</th>
  </tr>
  <% @links.each do |link| %>
    <tr>
      <td><%= link_to link.slug, link_path(link.id), :class => "block-link" %></td>
      <td><%= link_to link.target_url, link_path(link.id), :class => "block-link" %></td>
      <td><%= link_to link.created_at, link_path(link.id), :class => "block-link" %></td>
      <td>
          <%= link_to "Slug Link", "/#{link.slug}", class: "btn btn-info" %>
          <%= link_to "Show", link_path(link.id), class: "btn btn-default" %>
          <%= link_to "Edit", edit_link_path(link.id), class: "btn btn-default" %> 
          <%= link_to "Delete", link_path(link.id), :method => "delete", :data => {:confirm => "Are you sure you would like to delete the link: #{link.slug}?"}, class: "btn btn-danger" %>

      </td>
    </tr>
  <% end %>
</table>